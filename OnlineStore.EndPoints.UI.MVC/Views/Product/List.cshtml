        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    @foreach (var item in Model.Products)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <a href="#"><img class="card-img-top" src="@item.Image" alt="@item.Name" title="@item.Name"></a>
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="#">@item.Name</a>
                    </h4>
                    <h5>@item.Price.ToString("c")</h5>
                    <p class="card-text">@item.Description</p>
                </div>
                <div class="card-footer">
                    <form id="@item.ProductId" asp-action="AddToCart"
                          asp-controller="Cart" method="post">
                        <input type="hidden" name="productId" value="@item.ProductId" />
                        <input type="hidden" name="returnUrl"
                               value="" />
                        <button type="submit"
                                class="btn btn-success btn-sm pull-right" style="float:right">
                            Add To Cart
                        </button>

                    </form>
                </div>
            </div>
        </div>
    }
</div>

<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary"
     class="btn-group pull-right m-1">
</div>

